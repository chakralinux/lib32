# Contributor: Tobias Powalowski <tpowa@archlinux.org>

_pkgbasename=libtirpc
pkgname=lib32-${_pkgbasename}
pkgver=0.2.3
pkgrel=1
pkgdesc="Transport Independent RPC library (SunRPC replacement) (lib32)"
arch=('x86_64')
url="http://libtirpc.sourceforge.net/"
license=('BSD')
depends=('lib32-krb5' $_pkgbasename=$pkgver)
makedepends=('gcc-multilib')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/libtirpc/$_pkgbasename-$pkgver.tar.bz2)
sha256sums=('4f29ea0491b4ca4c29f95f3c34191b857757873bbbf4b069f9dd4da01a6a923c')

build() {
  cd "$srcdir/$_pkgbasename-$pkgver"

  ./configure --prefix=/usr --sysconf=/etc \
	--libdir=/usr/lib32 CC="gcc -m32"

  make
}

package() {
  cd "$srcdir/$_pkgbasename-$pkgver"
  make DESTDIR="$pkgdir" install
  rm -rf "$pkgdir"/{etc,usr/{include,share}}
  install -dm755 "$pkgdir"/usr/share/licenses/
  ln -s $_pkgbasename "$pkgdir"/usr/share/licenses/$pkgname
}