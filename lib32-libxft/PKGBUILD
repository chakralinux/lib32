_pkgsourcename=libxft
pkgname=lib32-$_pkgsourcename
pkgver=2.1.14
pkgrel=1
pkgdesc="FreeType-based font drawing library for X"
url="http://xorg.freedesktop.org/"
license=('custom')
arch=('x86_64')
groups=('lib32')
depends=('lib32-fontconfig' 'lib32-libxrender')
source=(http://chakra-project.org/repo/platform-testing/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)
md5sums=('1585858274f5d76f505791636307dc2e')

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}

