# include global config
source ../_buildscripts/${current_repo}-${_arch}-cfg.conf

pkgname=lib32-alsa-lib
pkgver=1.0.23
pkgrel=5
pkgdesc="An alternative implementation of Linux sound support (32 bit)"
url="http://www.alsa-project.org"
license=(GPL)
options=(!libtool)
groups=(lib32)
arch=(x86_64)
makedepends=('gcc-multilib')
depends=('lib32-glibc' 'alsa-lib')
source=(http://www.chakra-project.org/repo/platform/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.xz)
md5sums=('34c1de3bc796ffdfa100bfc4b15b5167')

build() {
  cd $srcdir/${_pkgbasename}-$pkgver
  export CC='gcc -m32'
  export PKG_CONFIG_PATH=/usr/lib32/pkgconfig
  ./configure --prefix=/usr --libdir=/usr/lib32 --disable-python
  make
}

package() {
  cd $srcdir/${_pkgbasename}-$pkgver
  make DESTDIR=$pkgdir install

  # Clean up lib32 package
  rm -rf "${pkgdir}"/usr/{bin,include,share}
}

