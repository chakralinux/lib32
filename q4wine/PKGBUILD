build() {
  cd ${srcdir}/${pkgname}-${pkgver/_/-}

  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DWITH_WINETRIKS=ON \
        -DLIBS_ENTRY_PATH=/usr/lib/$pkgname .
  make
}

package() {
  cd ${srcdir}/${pkgname}-${pkgver/_/-}
  make DESTDIR=${pkgdir} install
}
