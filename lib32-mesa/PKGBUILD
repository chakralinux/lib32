_pkgsourcename=mesa
pkgname=lib32-$_pkgsourcename
pkgver=7.7.1
pkgrel=1
pkgdesc="Mesa OpenGL library"
arch=('x86_64')
url="http://mesa3d.sourceforge.net"
license=('LGPL')
groups=('lib32')
depends=('lib32-libgl' 'lib32-gcc' 'lib32-libxt')
source=(http://chakra-project.org/repo/platform/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
	cd "$srcdir"
	mkdir -p "$pkgdir/opt/lib32/usr/lib"
	cp -dp usr/lib/*.so* "$pkgdir/opt/lib32/usr/lib"
}
md5sums=('6958e2bb110762ca356ef336a6ca1ed6')
