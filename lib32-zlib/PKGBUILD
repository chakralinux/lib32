_pkgsourcename=zlib
pkgname=lib32-$_pkgsourcename
pkgver=1.2.5
pkgrel=1
pkgdesc="A compression/decompression Library"
url="http://www.gzip.org/zlib"
license=('custom:zlib')
arch=(x86_64)
groups=('lib32')
depends=('lib32-glibc')
source=(http://www.chakra-project.org/repo/core/i686/${pkgname/lib32-/}-${pkgver}-${pkgrel}-i686.pkg.tar.xz)

build() {
	cd $startdir/src
	mkdir -p $startdir/pkg/opt/lib32/usr/lib
#        mkdir -p $startdir/pkg/opt/lib32/lib
	cp -dp usr/lib/*.so* $startdir/pkg/opt/lib32/usr/lib
# 1.2.3.3 does not have stuff in /lib, keep in comments
#        cp -dp lib/*.so* $startdir/pkg/opt/lib32/lib
}
md5sums=('af7e0284905458836b6140c483ea06ae')

