# Maintainer: Mikko Seppälä <t-r-a-y@mbnet.fi>
_pkgsourcename=libxcomposite
pkgname=lib32-$_pkgsourcename
pkgver=0.4.2
pkgrel=1
pkgdesc="X11 Composite extension library"
url="http://xorg.freedesktop.org/"
license=('GPL')
arch=('x86_64')
groups=('lib32')
depends=('lib32-glibc')
source=(http://chakra-project.org/repo/platform-testing/i686/$_pkgsourcename-$pkgver-$pkgrel-i686.pkg.tar.xz)

build() {
        cd $srcdir
        mkdir -p $pkgdir/opt/lib32/usr/lib
        cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}

md5sums=('9204300ac36e57e82aff520a1b4c37ab')

