_pkgsourcename=openal
pkgname=lib32-${_pkgsourcename}
pkgver=1.12.854
pkgrel=1
pkgdesc="OpenAL audio library for use with opengl (32-bit)"
arch=('x86_64')
url="http://www.openal.org/"
license=('LGPL')
depends=('lib32-glibc' $_pkgbasename)
makedepends=('lib32-alsa-lib' 'lib32-sdl' 'pkgconfig' 'cmake' 'lib32-gcc-libs')
options=('!libtool')
source=(http://chakra-project.org/repo/platform/i686/${_pkgsourcename}-${pkgver}-${pkgrel}-i686.pkg.tar.xz)
md5sums=('b3106eacc766cfae6f97a35ade6d17a1')

build() {
  
  cd ${srcdir}
    
  mkdir -p $pkgdir/opt/lib32/usr/lib

  cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}
