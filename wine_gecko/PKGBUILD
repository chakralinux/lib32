pkgname=wine_gecko
pkgver=2.40
pkgrel=1
pkgdesc="Wine's built-in replacement for Microsoft's Internet Explorer"
arch=('x86_64')
url="http://wiki.winehq.org/Gecko"
license=('MPL')
depends=('wine')
_url='http://sourceforge.net/projects/wine/files/Wine%20Gecko'
source=("${_url}/${pkgver}/${pkgname}-${pkgver}-x86.msi"
        "${_url}/${pkgver}/${pkgname}-${pkgver}-x86_64.msi")
md5sums=('66fa7ceca8c0aa84c6a2db8672a743b6'
         '5e5d242e52e885190a0fe02a2e38a987')

package() {
  cd "$srcdir"

  install -d -m755 "${pkgdir}/usr/share/wine/gecko/"

  install -D -m644 "${pkgname}-${pkgver}-x86.msi" \
                   "${pkgname}-${pkgver}-x86_64.msi" \
                   "${pkgdir}/usr/share/wine/gecko/"
}
