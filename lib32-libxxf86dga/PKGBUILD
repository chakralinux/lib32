_pkgbasename=libxxf86dga
pkgname=lib32-$_pkgbasename
pkgver=1.1.1
pkgrel=1
pkgdesc="X11 Direct Graphics Access extension library (32-bit)"
arch=(x86_64)
url="http://xorg.freedesktop.org/"
license=('custom')
depends=('lib32-libxext' 'xf86dgaproto' $_pkgbasename)
makedepends=('xorg-util-macros' 'lib32-gcc-libs')
options=('!libtool')
source=(http://chakra-project.org/repo/platform/i686/$_pkgbasename-$pkgver-$pkgrel-i686.pkg.tar.xz)
md5sums=('565bc5b0e139e5f440776269d93fdb5b')

build() {
	cd $srcdir
	mkdir -p $pkgdir/opt/lib32/usr/lib
	cp -dp usr/lib/*.so* $pkgdir/opt/lib32/usr/lib
}